programa
{
	
	funcao inicio()
	{
		inteiro numeros[10], pares = 0, impares = 0
		para(inteiro i = 0; i <= 9; i++)
		{
			leia(numeros[i])
		}
		para(inteiro i = 0; i <= 9; i++)
		{
			se(numeros[i] % 2 == 0)
			{
				pares++
			}
			senao
			{
				impares++
			}
		}
		escreva("a lista tem ", pares ," numeros pares e ", impares ," impares")
	}
}
